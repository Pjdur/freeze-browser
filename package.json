{
  "name": "freeze-browser",
  "version": "0.2.0",
  "description": "A simple Electron browser app",
  "license": "MIT",
  "author": "Pjdur",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "npm run build && electron-builder --win ",
    "build:unpack": "npm run build && electron-builder --unpack",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build build && electron-builder --linux"
  },
  "dependencies": {
  },
  "devDependencies": {
    "electron-builder": "^24.13.3",
    "electron": "^38.3.0"
  },
  "build": {
    "appId": "com.freeze.browser",
    "productName": "Freeze Browser",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/Icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
